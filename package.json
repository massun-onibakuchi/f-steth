    "doc": "forge doc",
    "lint:check": "prettier --check '**.{sol,js,ts}'",
    "lint:fix": "prettier --write '**.{sol,js,ts}'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/massun-onibakuchi/hardhat-foundry-template/"
  },
  "keywords": [
    "hardhat",
    "solidity",
    "foundry"
  ],
  "author": "0xbakuchi",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/massun-onibakuchi/hardhat-foundry-template/#readme",
  "devDependencies": {
    "dotenv": "^16.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.js": "prettier --write",
